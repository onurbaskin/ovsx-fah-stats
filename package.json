{
	"name": "folding-at-home-stats",
	"version": "0.1.13",
	"repository": {
		"type": "git",
		"url": "https://github.com/onurbaskin/ovsx-fah-stats.git"
	},
	"main": "./out/extension.js",
	"devDependencies": {
		"@types/node": "^24.10.1",
		"@types/vscode": "1.99.0",
		"@typescript-eslint/eslint-plugin": "^8.46.4",
		"@typescript-eslint/parser": "^8.46.4",
		"esbuild": "^0.27.0",
		"eslint": "^9.39.1",
		"ovsx": "^0.10.6",
		"typescript": "^5.9.3",
		"vsce": "^2.15.0"
	},
	"dependencies": {
		"axios": "^1.13.2",
		"dayjs": "^1.11.19"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"categories": [
		"Other"
	],
	"keywords": [
		"folding",
		"foldingathome",
		"folding@home",
		"stats",
		"statistics",
		"science",
		"research",
		"distributed-computing"
	],
	"contributes": {
		"commands": [
			{
				"command": "fah-stats.refresh",
				"title": "Refresh Folding@Home Stats",
				"category": "Folding@Home Stats"
			},
			{
				"command": "fah-stats.welcome",
				"title": "Open Welcome Page",
				"category": "Folding@Home Stats"
			},
			{
				"command": "fah-stats.reset",
				"title": "Reset Configuration",
				"category": "Folding@Home Stats"
			}
		],
		"configuration": {
			"title": "Folding@Home Stats",
			"properties": {
				"fahStats.userName": {
					"type": "string",
					"default": "",
					"description": "Your Folding@Home user ID (numeric ID, required for fetching statistics)"
				},
				"fahStats.teamName": {
					"type": "string",
					"default": "",
					"description": "Preferred team name to track (optional - if not specified, the team with largest contribution will be selected)"
				},
				"fahStats.passkey": {
					"type": "string",
					"default": "",
					"description": "Your Folding@Home passkey"
				},
				"fahStats.refreshInterval": {
					"type": "number",
					"default": 300,
					"description": "Refresh interval in seconds (default: 300 = 5 minutes)",
					"minimum": 10
				},
				"fahStats.showLastWork": {
					"type": "boolean",
					"default": true,
					"description": "Show last recorded work time in the status bar"
				}
			}
		}
	},
	"displayName": "Folding at Home Stats",
	"description": "Display Folding@Home statistics in the VS Code status bar. Track your contributions to scientific research while you code!",
	"icon": "media/icons/folding-at-home-logo.png",
	"engines": {
		"vscode": "^1.99.0"
	},
	"license": "MIT",
	"publisher": "onurbaskin",
	"scripts": {
		"compile": "node esbuild.config.js --production",
		"package": "bun run compile && bun vsce package",
		"publish:ovsx": "bun run compile && bun ovsx publish --pat \"${OVSX_PAT}\"",
		"publish:vscode": "bun run compile && bun vsce publish"
	}
}
